{{#if error }}
<div class="alert alert-dismissible fade show mostra color-alerta" role="alert">
    {{error}}
    <button type="button" class="close ajuste-tamano" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
{{/if}}


{{#each errors}}
<div class="alert alert-danger alert-dismissible fade show mostra" role="alert">
    {{text}}
    <button type="button" class="close ajuste-tamano" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
{{/each}}

